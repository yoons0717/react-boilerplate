{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": ["plugin:@typescript-eslint/eslint-recommended", "plugin:react/recommended"],
  "plugins": ["@typescript-eslint", "import", "react-hooks"]
}
